<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopListActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#2E7D32"
        app:title="Gyógyszerbolt"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Első kép -->
    <ImageView
        android:id="@+id/elsokep"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/masodikkep"
        app:srcCompat="@drawable/gyogyszeregy"
        android:layout_margin="8dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/elsokep"
        app:layout_constraintStart_toStartOf="@id/elsokep"
        app:layout_constraintEnd_toEndOf="@id/elsokep"
        android:layout_marginBottom="16dp" />

    <!-- Második kép -->
    <ImageView
        android:id="@+id/masodikkep"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toEndOf="@id/elsokep"
        app:layout_constraintEnd_toStartOf="@id/harmadikkep"
        app:srcCompat="@drawable/gyogyszerketto"
        android:layout_margin="8dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/masodikkep"
        app:layout_constraintStart_toStartOf="@id/masodikkep"
        app:layout_constraintEnd_toEndOf="@id/masodikkep"
        android:layout_marginBottom="16dp" />

    <!-- Harmadik kép -->
    <ImageView
        android:id="@+id/harmadikkep"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toEndOf="@id/masodikkep"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/gyogyszerharom"
        android:layout_margin="8dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/harmadikkep"
        app:layout_constraintStart_toStartOf="@id/harmadikkep"
        app:layout_constraintEnd_toEndOf="@id/harmadikkep"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
